{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [],
        "steps": [
            {
                "bladeTitle": "Credential",
                "label": "VM Credential",
                "name": "credentialsBlade",
                "subLabel": {
                    "preValidation": "Configure the VM credentials",
                    "postValidation": "Done"
                },
                "elements": [
                    {
                        "name": "adminUsername",
                        "type": "Microsoft.Compute.UserNameTextBox",
                        "label": "User name",
                        "toolTip": "Admin username for the virtual machine",
                        "osPlatform": "Windows",
                        "constraints": {
                            "required": true
                        }
                    },
                    {
                        "name": "adminPassword",
                        "type": "Microsoft.Compute.CredentialsCombo",
                        "label": {
                            "password": "Password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": {
                            "password": "Admin password for the virtual machine"
                        },
                        "osPlatform": "Windows",
                        "constraints": {
                            "required": true
                        }
                    }
                ]
            },
            {
                "bladeTitle": "VM Settings",
                "name": "vmConfigBlade",
                "label": "Virtual Machine settings",
                "subLabel": {
                    "preValidation": "Configure the virtual machine settings",
                    "postValidation": "Done"
                },
                "elements": [
                    {
                        "name": "vmNamePrefix",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Virtual Machine Name prefix",
                        "toolTip": "Prefix for the virtual machine",
                        "defaultValue": "",
                        "constraints": {
                            "required": true,
                            "validationMessage": "Must be 3-5 characters.",
                            "regex": "^[a-z0-9A-Z]{3,5}$"
                        }
                    },
                    {
                        "name": "vmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Virtual machine size",
                        "toolTip": "The size of the virtual machine",
                        "recommendedSizes": [
                            "Standard_D1_v2"
                        ],
                        "constraints": {
                            "allowedSizes": [
                                "Standard_D1_v2",
                                "Standard_D2_v2",
                                "Standard_D2_v3",
                                "Standard_D4_v3"
                            ]
                        },
                        "osPlatform": "Windows",
                        "count": 1
                    }
                ]
            },
            {
                "name": "endpointBlade",
                "label": "Endpoint settings",
                "subLabel": {
                    "preValidation": "Configure the VM endpoint",
                    "postValidation": "Done"
                },
                "bladeTitle": "VM Endpoint settings",
                "elements": [
                    {
                        "name": "dnsAndPublicIP",
                        "type": "Microsoft.Network.PublicIpAddressCombo",
                        "label": {
                            "publicIpAddress": "Public IP address",
                            "domainNameLabel": "DNS label"
                        },
                        "toolTip": {
                            "domainNameLabel": "DNS endpoint for the Managed VM IP address."
                        },
                        "defaultValue": {
                            "publicIpAddressName": "ip01"
                        },
                        "options": {
                            "hideNone": true,
                            "hideDomainNameLabel": false
                        },
                        "constraints": {
                            "required": {
                                "domainNameLabel": true
                            }
                        }
                    }
                ]
            },
            {
                "name": "storageBlade",
                "label": "Storage",
                "bladeTitle": "Storage settings",
                "elements": [
                    {
                        "name": "storageAccount",
                        "type": "Microsoft.Storage.MultiStorageAccountCombo",
                        "label": {
                            "prefix": "Storage account name",
                            "type": "Storage account type"
                        },
                        "defaultValue": {
                            "type": "Premium_LRS"
                        },
                        "toolTip": {
                            "prefix": "Storage account name",
                            "type": "Storage account type"
                        },
                        "count": 2,
                        "visible": true
                    }
                ]
            }
        ],
        "outputs": {
            "applicationResourceName": "[steps('vmConfigBlade').vmNamePrefix]",
            "dnsName": "[steps('endpointBlade').dnsAndPublicIP.domainNameLabel]",
            "location": "[location()]",
            "publicIPAddressName": "[steps('endpointBlade').dnsAndPublicIP.name]",
            "pwd": "[steps('credentialsBlade').adminPassword.password]",
            "userName": "[steps('credentialsBlade').adminUsername]",
            "vmNamePrefix": "[steps('vmConfigBlade').vmNamePrefix]",
            "vmSize": "[steps('vmConfigBlade').vmSize]",
            "storageAccountPrefix": "[steps('storageBlade').storageAccount.prefix]",
            "storageAccountType": "[steps('storageBlade').storageAccount.type]"
        }
    }
}